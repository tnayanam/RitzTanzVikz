@model IEnumerable<Bridge.Models.Referral>
@using Bridge.Helpers
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title"><a href="@Url.Action("Create")" class="btn btn-primary btn-md pull-left">Refer Me </a></h3>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ReferralName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Resume.ResumeName)
                </th>
                <th>
                    Status
                </th>
                <th></th>
            </tr>
        </thead>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="5">No Referrals were found.</td></tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReferralName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Company.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Resume.ResumeName)
                        </td>
                        <td><span class="label label-success">Info Label</span></td>
                        <td></td>
                        @*<td>
                                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                            </td>*@
                    </tr>
                </tbody>
            }
        }
    </table>
</div>
