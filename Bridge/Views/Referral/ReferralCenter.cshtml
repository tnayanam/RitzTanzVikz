@model IEnumerable<Bridge.Models.Referral>
    @using Bridge.Helpers

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ReferralName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Company.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Resume.ResumeName)
        </th>
        <th>
        <a href="@Url.Action("Create")" class="btn btn-primary btn-block">Refer Me </a></th>
        <th></th>
    </tr>
@if (Model.Count() == 0)
{
    <tr><td colspan="5">No Referrals were found.</td></tr>
}
else
{
    foreach (var item in Model)
    {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ReferralName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Resume.ResumeName)
                </td>
                @*<td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                    </td>*@
            </tr>
        }

    }

</table>
